<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>stuffbucket Homebrew Tap</title>
    <organization>com.stuffbucket</organization>
    <domains enable_localSystem="true"/>
    <options customize="never" require-scripts="true" rootVolumeOnly="true"/>
    
    <welcome file="welcome.html" mime-type="text/html"/>
    <license file="../../LICENSE" mime-type="text/plain"/>
    <conclusion file="conclusion.html" mime-type="text/html"/>
    
    <pkg-ref id="com.stuffbucket.homebrew">
        <bundle-version/>
    </pkg-ref>
    
    <options customize="never" require-scripts="false"/>
    <choices-outline>
        <line choice="default">
            <line choice="com.stuffbucket.homebrew"/>
        </line>
    </choices-outline>
    
    <choice id="default"/>
    <choice id="com.stuffbucket.homebrew" visible="false">
        <pkg-ref id="com.stuffbucket.homebrew"/>
    </choice>
    
    <pkg-ref id="com.stuffbucket.homebrew" version="1.0.0" onConclusion="none">homebrew.pkg</pkg-ref>
</installer-gui-script>
